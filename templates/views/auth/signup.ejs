<section id="signin_alt" class="police signin-alt">
    <div class="section-content">
        <div class="wrap">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        <div class="normal-signin">
                            <div class="title">
                                <h3>Sign Up</h3>
                            </div>
                            <div class="form-main">
                                <form action="/signup" method="POST" autocomplete="off">
                                    <input type="hidden" name="_csrf" value="<%=_csrf%>" />
                                    <div class="form-group">
                                        <div class="un-wrap"><i class="fa fa-envelope"></i>
                                            <input value="<%=email%>" type="email" id="email" name="email" class="form-control" placeholder="E-mail" required autofocus>
                                        </div>
                                        <div class="un-wrap"><i class="fa fa-user"></i>
                                            <input value="<%=username%>" type="text" name="username" id="username" class="form-control" placeholder="Username" required>
                                        </div>
                                        <div class="pw-wrap"><i class="fa fa-lock"></i>
                                            <input type="password" name="password" class="form-control" placeholder="Password" required>
                                        </div>
                                        <div class="row top-buffer">
                                            <div class="col-md-4 col-md-offset-8">
                                                <button type="submit" class="btn btn-block signin">Sign Up</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="top-buffer bottom-wrap">
                                <div class="row">
                                    <div class="col-xs-6 col-md-5 col-md-offset-1">
                                        <a href="/forgot" title="Recover your account password" id="forgot_from_2">Forgot password</a>
                                    </div>
                                    <div class="col-xs-6 col-md-6">
                                        <a href="/signin" title="Sign In" id="signup_from_2">Sign In</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>